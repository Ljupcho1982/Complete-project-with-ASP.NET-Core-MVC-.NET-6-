@model IEnumerable<Category>
@*
   ViewData["Title"]="Index";

  
*@
@{
}

@if(TempData["success"]!=null){
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <script type="text/javascript">

        toastr.success('@TempData["success"]');


    </script>
    
   
   
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">Category List</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="CategoryController1" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle">&nbsp;Create new Category</i></a>
        </div>
    </div>


</div>

<br />
<br />

<table class="table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>

                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

                Time

            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>

                <td width="10%">
                    @obj.Id

                </td>

                <td width="30%">
                    @obj.Name

                </td>
                

            
            
           <td width="20%">
                    @obj.DisplayOrde

           </td>
                
            <td width="20%">
                    @obj.CreatedDateTime
            </td>
            <td width="10%">
                <div class="w-75 btn-group" role="group">
                        <a asp-controller="CategoryController1" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

                </div>
                <td width="10%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CategoryController1" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i>Delete</a></div>

                </td>
                    

         
         
            
           

        </tr>
        }




    </tbody>




</table>